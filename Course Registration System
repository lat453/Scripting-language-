<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Registration System</title>
  <style>
    body {font-family: Arial, sans-serif; background:#f4f6f9; margin:20px;}
    h2 {color:#2c3e50;}
    .box {background:#fff; padding:15px; margin-bottom:15px;
          border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.1);}
    ul {list-style-type:none; padding:0;}
    li {padding:6px; border-bottom:1px solid #ddd;}
    button {margin-top:10px; padding:8px 15px; border:none;
            background:#3498db; color:#fff; border-radius:5px; cursor:pointer;}
    button:hover {background:#2980b9;}
  </style>
  <script>
    let courses = [
      {id: 1, name: "AI Basics", seats: 2, prereq: ""},
      {id: 2, name: "ML Advanced", seats: 1, prereq: "AI Basics"},
      {id: 3, name: "Data Science", seats: 3, prereq: ""}
    ];
    let registered = [];

    function registerCourse() {
      let courseId = parseInt(document.getElementById("courseSelect").value);
      let course = courses.find(c => c.id === courseId);

      if (course.seats <= 0) {
        alert(" Course full!");
        return;
      }
      if (registered.includes(course.name)) {
        alert("Already registered for " + course.name);
        return;
      }
      if (course.prereq && !registered.includes(course.prereq)) {
        alert(" You must complete prerequisite: " + course.prereq);
        return;
      }

      course.seats--;
      registered.push(course.name);
      alert(Registered for ${course.name}. Seats left: ${course.seats});
      displayCourses();
      displayRegistrations();
    }

    function displayCourses() {
      let list = document.getElementById("courseList");
      list.innerHTML = "";
      courses.forEach(c => {
        list.innerHTML += <li><b>${c.name}</b> - Seats: ${c.seats} - Prereq: ${c.prereq || "None"}</li>;
      });
    }

    function displayRegistrations() {
      let regList = document.getElementById("myCourses");
      regList.innerHTML = registered.length ? "" : "<i>No courses registered yet</i>";
      registered.forEach(r => {
        regList.innerHTML += <li>${r}</li>;
      });
    }

    window.onload = () => {
      displayCourses();
      displayRegistrations();
    };
  </script>
</head>
<body>
  <h2>Course Registration System</h2>

  <div class="box">
    <h3>Available Courses</h3>
    <ul id="courseList"></ul>
  </div>

  <div class="box">
    <h3>Register for a Course</h3>
    <select id="courseSelect">
      <option value="1">AI Basics</option>
      <option value="2">ML Advanced</option>
      <option value="3">Data Science</option>
    </select>
    <button onclick="registerCourse()">Register</button>
  </div>

  <div class="box">
    <h3>My Registrations</h3>
    <ul id="myCourses"></ul>
  </div>
</body>
</html>
